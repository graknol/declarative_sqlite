{
  "name": "declarative-sqlite",
  "version": "1.0.0",
  "description": "TypeScript port of declarative_sqlite for PWA and Capacitor applications - Zero code generation, type-safe SQLite with automatic migration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "sqlite",
    "database",
    "declarative",
    "schema",
    "migration",
    "pwa",
    "capacitor",
    "typescript",
    "offline-first",
    "sync",
    "rxjs",
    "reactive",
    "hlc",
    "lww",
    "zero-codegen",
    "type-safe"
  ],
  "author": "graknol",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/graknol/declarative_sqlite.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/graknol/declarative_sqlite/issues"
  },
  "homepage": "https://github.com/graknol/declarative_sqlite#readme",
  "peerDependencies": {
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "better-sqlite3": "^12.5.0",
    "eslint": "^8.55.0",
    "rxjs": "^7.8.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
